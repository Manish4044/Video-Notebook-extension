{
  "short_name": "VN",
  "name": "Video Notebook Extension",
  "description":"Make notes of your YouTube video",
  "version":"1.0.0",
  "manifest_version":3,
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ],
  "action":{
    "default_title":"My Apps",
    "default_popup":"index.html",
    "default_icon":{
      "16":"logo192.png",
      "128":"logo512.png"
    }
  }
}
